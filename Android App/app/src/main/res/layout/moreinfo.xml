<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/name"
        android:layout_width="237dp"
        android:layout_height="0dp"
        android:layout_marginLeft="128dp"
        android:layout_marginTop="19dp"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="66dp"
        android:layout_height="59dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="8dp"
        android:text="Hello,"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.034" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:text="Living Room"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/livingroom"
        app:layout_constraintTop_toBottomOf="@+id/livingroom" />

    <TextView
        android:id="@+id/BedRoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Bed Room"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/bedroom"
        app:layout_constraintTop_toBottomOf="@+id/bedroom" />

    <ImageView
        android:id="@+id/pic"
        android:layout_width="87dp"
        android:layout_height="78dp"
        android:layout_marginEnd="160dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <ImageView
        android:id="@+id/kitchen"
        android:layout_width="115dp"
        android:layout_height="120dp"
        android:visibility="invisible"
        android:onClick="kitchen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.111"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.849"
        app:srcCompat="@drawable/kitchen" />

    <ImageView
        android:id="@+id/livingroom"
        android:layout_width="115dp"
        android:layout_height="120dp"
        android:visibility="invisible"
        android:onClick="LivingRoom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.111"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.462"
        app:srcCompat="@drawable/livingroom" />

    <ImageView
        android:id="@+id/bedroom"
        android:layout_width="115dp"
        android:layout_height="120dp"
        android:visibility="invisible"
        android:onClick="bedroom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.858"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.462"
        app:srcCompat="@drawable/download" />

    <ImageView
        android:id="@+id/bath"
        android:layout_width="115dp"
        android:layout_height="120dp"
        android:visibility="invisible"
        android:onClick="bath"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.858"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.849"
        app:srcCompat="@drawable/bath" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:text="Kitchen"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/kitchen"
        app:layout_constraintTop_toBottomOf="@+id/kitchen" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Bathroom"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/bath"
        app:layout_constraintTop_toBottomOf="@+id/bath" />


</android.support.constraint.ConstraintLayout>